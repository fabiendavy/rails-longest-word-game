<div class="container">

    <h1>New game</h1>
    <div class="box-letters">
      <% @letters.each do |letter| %>
        <ul>
          <li><%= letter %></li>
        </ul>
      <% end %>
    </div>

    <form action="/score" method="POST">
      <label for="word">What is the longest word you can find ?</label>
      <div class="user-inputs">
        <input type="text" name="word" placeholder="Type here..." id="word">
        <input type="submit" value="Play" id="submit">
        <%= hidden_field_tag :letters, @letters %>
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>

</div>
